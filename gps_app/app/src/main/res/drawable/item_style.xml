<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:gradientRadius="0" android:startColor="@color/Shadow" android:endColor="@color/Medium_Electric_Blue"/>
            <corners android:radius="5dp"/>
            <size android:width="15dp"/>
            <stroke android:width="2dp" android:color="@color/Police_Blue"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:gradientRadius="0" android:startColor="@color/Medium_Electric_Blue" android:endColor="@color/Shadow"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="@color/Police_Blue"/>
        </shape>
    </item>
</selector>