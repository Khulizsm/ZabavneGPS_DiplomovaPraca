<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishScreenActivity">

    <TextView
        android:id="@+id/tv_FinishScreenWinText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="italic|bold"
        android:textSize="24sp"
        android:background="@color/Blue_Cola"
        android:gravity="center"
        android:text=""
        />


    <TextView
        android:id="@+id/btn_FinishScreenFinishRouteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FinishScreenFinishRouteText"
        app:layout_constraintBottom_toTopOf="@id/btn_FinishScreenFinishRoute"
        android:textStyle="italic|bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/btn_FinishScreenFinishRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FinishScreenFinishRoute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        android:background="@drawable/button_style"
        android:padding="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>